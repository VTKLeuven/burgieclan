#!/bin/sh
#
# Git pre-commit hook that runs PHP CodeSniffer on staged PHP files
# Prevents commits with code style violations
#

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root directory of the git repository
GIT_ROOT=$(git rev-parse --show-toplevel)
BACKEND_DIR="$GIT_ROOT/backend"
PHPCS="$BACKEND_DIR/vendor/bin/phpcs"

# Check if we're in a git repository
if [ ! -d "$GIT_ROOT/.git" ]; then
    echo "${RED}‚ùå Error: Not in a git repository${NC}"
    exit 1
fi

# Check if backend directory exists
if [ ! -d "$BACKEND_DIR" ]; then
    echo "${YELLOW}‚ö†Ô∏è  Warning: Backend directory not found, skipping PHP CodeSniffer${NC}"
    exit 0
fi

# Check if phpcs is installed
if [ ! -f "$PHPCS" ]; then
    echo "${YELLOW}‚ö†Ô∏è  Warning: PHP CodeSniffer not installed in backend/vendor/bin/phpcs${NC}"
    echo "${YELLOW}   Run 'cd backend && composer install' to install dependencies${NC}"
    exit 0
fi

# Get list of staged PHP files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.php$' | grep '^backend/')

# If no PHP files are staged, exit successfully
if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

echo "üîç Running PHP CodeSniffer on staged files..."
echo ""

# Create a temporary file list
TEMP_FILE=$(mktemp)
echo "$STAGED_FILES" > "$TEMP_FILE"

# Run phpcs on staged files
PHPCS_OUTPUT=$(cd "$GIT_ROOT" && cat "$TEMP_FILE" | xargs "$PHPCS" --runtime-set ignore_warnings_on_exit 1 2>&1)
PHPCS_EXIT_CODE=$?

# Clean up temp file
rm -f "$TEMP_FILE"

# If phpcs found issues
if [ $PHPCS_EXIT_CODE -ne 0 ]; then
    echo "${RED}‚ùå PHP CodeSniffer found code style violations:${NC}"
    echo ""
    echo "$PHPCS_OUTPUT"
    echo ""
    echo "${YELLOW}To fix these issues automatically, run:${NC}"
    echo "  cd backend && vendor/bin/phpcbf"
    echo ""
    echo "${YELLOW}Or to commit anyway (not recommended), use:${NC}"
    echo "  git commit --no-verify"
    echo ""
    exit 1
fi

echo "${GREEN}‚úÖ PHP CodeSniffer passed!${NC}"
echo ""
exit 0

