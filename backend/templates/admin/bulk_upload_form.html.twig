{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <twig:ea:Icon name="fa fa-cloud-arrow-up" class="me-1" />
    Bulk Upload Documents
{% endblock %}

{% block main %}
    <twig:ea:Alert variant="info">
        <h5 class="alert-heading">
            <twig:ea:Icon name="fa fa-circle-info" class="me-1" />
            Bulk Document Upload
        </h5>
        <p class="mb-2">Upload multiple documents at once. You'll be able to review and edit metadata before finalizing.</p>
        <ul class="mb-0">
            <li>Select default course and category (required)</li>
            <li>Choose default year and tags (optional)</li>
            <li>Upload multiple document files</li>
            <li>Review and edit individual document metadata in the next step</li>
        </ul>
    </twig:ea:Alert>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form, {'action': path('admin_bulk_upload_index'), 'attr': {'novalidate': 'novalidate', 'class': 'ea-form'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.course) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.category) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.useFileDate) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.defaultYear) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.defaultTags) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.underReview) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.anonymous) }}
                    </div>
                </div>

                <hr class="my-4">

                <div class="mb-4">
                    {{ form_row(form.files) }}
                </div>
                
                <div class="form-actions d-flex gap-2">
                    <twig:ea:Button 
                        variant="primary" 
                        icon="fa fa-cloud-arrow-up"
                        type="submit"
                    >
                        Upload &amp; Preview
                    </twig:ea:Button>

                    <twig:ea:Button 
                        htmlElement="a" 
                        href="{{ path('admin') }}" 
                        variant="default"
                        icon="fa fa-xmark"
                    >
                        Cancel
                    </twig:ea:Button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block configured_body_contents %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const useFileDateCheckbox = document.querySelector('input[name="form[useFileDate]"]');
        const defaultYearField = document.querySelector('select[name="form[defaultYear]"]');
        const form = document.querySelector('.ea-form');
        const fileInput = document.querySelector('input[type="file"][multiple]');
        const courseField = document.querySelector('select[name="form[course]"]');
        const categoryField = document.querySelector('select[name="form[category]"]');
        const tagsField = document.querySelector('select[name="form[defaultTags][]"]');
        
        if (useFileDateCheckbox && defaultYearField) {
            const yearFormGroup = defaultYearField.closest('.mb-3, .form-group');
            
            function toggleYearField() {
                if (useFileDateCheckbox.checked) {
                    defaultYearField.disabled = true;
                    if (yearFormGroup) {
                        yearFormGroup.style.opacity = '0.5';
                    }
                } else {
                    defaultYearField.disabled = false;
                    if (yearFormGroup) {
                        yearFormGroup.style.opacity = '1';
                    }
                }
            }
            
            // Initial state
            toggleYearField();
            
            // Listen for changes
            useFileDateCheckbox.addEventListener('change', toggleYearField);
        }

        // Dynamic tags filtering based on course and category
        if (courseField && categoryField && tagsField) {
            let debounceTimer;

            const noCourseoOrCategoryHTML = '<option value="">Please select a course or category first</option>';
            
            function updateTags() {
                const courseId = courseField.value;
                const categoryId = categoryField.value;
                
                // Clear debounce timer
                clearTimeout(debounceTimer);
                
                // If neither course nor category is selected, clear tags
                if (!courseId && !categoryId) {
                    tagsField.innerHTML = noCourseoOrCategoryHTML;
                    tagsField.disabled = true;
                    return;
                }
                
                // Debounce the API call
                debounceTimer = setTimeout(() => {
                    // Build query string
                    const params = new URLSearchParams();
                    if (courseId) params.append('course', courseId);
                    if (categoryId) params.append('category', categoryId);
                    
                    // Fetch filtered tags
                    fetch('{{ path('admin_bulk_upload_get_tags') }}?' + params.toString())
                        .then(response => response.json())
                        .then(tags => {
                            // Store currently selected values
                            const selectedValues = Array.from(tagsField.selectedOptions).map(opt => opt.value);
                            
                            // Clear and rebuild options
                            tagsField.innerHTML = '<option value="">Select tags</option>';
                            
                            if (tags.length > 0) {
                                tags.forEach(tag => {
                                    const option = document.createElement('option');
                                    option.value = tag.id;
                                    option.textContent = tag.name;
                                    // Restore selection if it was previously selected and still available
                                    if (selectedValues.includes(String(tag.id))) {
                                        option.selected = true;
                                    }
                                    tagsField.appendChild(option);
                                });
                                tagsField.disabled = false;
                            } else {
                                const option = document.createElement('option');
                                option.value = '';
                                option.textContent = 'No tags found for this course/category';
                                tagsField.innerHTML = option.outerHTML;
                                tagsField.disabled = true;
                            }
                        })
                        .catch(error => {
                            console.error('Error fetching tags:', error);
                            tagsField.innerHTML = '<option value="">Error loading tags</option>';
                            tagsField.disabled = true;
                        });
                }, 300); // 300ms debounce
            }
            
            // Listen for changes
            courseField.addEventListener('change', updateTags);
            categoryField.addEventListener('change', updateTags);
            
            // Initial state - disable tags until course/category is selected
            if (!courseField.value && !categoryField.value) {
                tagsField.disabled = true;
                tagsField.innerHTML = noCourseoOrCategoryHTML;
            }
        }

        // Capture file timestamps before form submission
        if (form && fileInput) {
            form.addEventListener('submit', function(e) {
                // Remove any existing timestamp fields
                form.querySelectorAll('.file-timestamp').forEach(el => el.remove());
                
                // Add timestamp for each file
                const files = fileInput.files;
                const timestamps = [];
                
                for (let i = 0; i < files.length; i++) {
                    // Convert to Unix timestamp (seconds)
                    const timestamp = Math.floor(files[i].lastModified / 1000);
                    timestamps.push(timestamp);
                }
                
                // Add as JSON array to form
                if (timestamps.length > 0) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'file_timestamps';
                    input.value = JSON.stringify(timestamps);
                    input.className = 'file-timestamp';
                    form.appendChild(input);
                }
            });
        }
    });
</script>
{% endblock %}

