{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <twig:ea:Icon name="fa fa-cloud-arrow-up" class="me-1" />
    Bulk Upload Documents
{% endblock %}

{% block main %}
    <twig:ea:Alert variant="info">
        <h5 class="alert-heading">
            <twig:ea:Icon name="fa fa-circle-info" class="me-1" />
            Bulk Document Upload
        </h5>
        <p class="mb-2">Upload multiple documents at once. You'll be able to review and edit metadata before finalizing.</p>
        <ul class="mb-0">
            <li>Select default course and category (required)</li>
            <li>Choose default year and tags (optional)</li>
            <li>Upload multiple document files</li>
            <li>Review and edit individual document metadata in the next step</li>
        </ul>
    </twig:ea:Alert>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form, {'action': path('admin_bulk_upload_index'), 'attr': {'novalidate': 'novalidate', 'class': 'ea-form'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.course) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.category) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.useFileDate) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.defaultYear) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.defaultTags) }}
                        
                        <div class="mt-2 mb-3">
                            <div class="input-group">
                                <input type="text" 
                                       class="form-control" 
                                       id="newTagInput" 
                                       placeholder="Create a new tag...">
                                <button class="btn btn-outline-secondary" 
                                        type="button" 
                                        id="createTagBtn">
                                    <i class="fa fa-plus"></i> Create Tag
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                Create a new tag and it will be automatically added to your selection
                            </small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.underReview) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.anonymous) }}
                    </div>
                </div>

                <hr class="my-4">

                <div class="mb-4">
                    {{ form_row(form.files) }}
                </div>
                
                <div class="form-actions d-flex gap-2">
                    <twig:ea:Button 
                        variant="primary" 
                        icon="fa fa-cloud-arrow-up"
                        type="submit"
                    >
                        Upload &amp; Preview
                    </twig:ea:Button>

                    <twig:ea:Button 
                        htmlElement="a" 
                        href="{{ path('admin') }}" 
                        variant="default"
                        icon="fa fa-xmark"
                    >
                        Cancel
                    </twig:ea:Button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block configured_body_contents %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const useFileDateCheckbox = document.querySelector('input[name="form[useFileDate]"]');
        const defaultYearField = document.querySelector('select[name="form[defaultYear]"]');
        const form = document.querySelector('.ea-form');
        const fileInput = document.querySelector('input[type="file"][multiple]');
        const courseField = document.querySelector('select[name="form[course]"]');
        const categoryField = document.querySelector('select[name="form[category]"]');
        const tagsField = document.querySelector('select[name="form[defaultTags][]"]');
        
        if (useFileDateCheckbox && defaultYearField) {
            const yearFormGroup = defaultYearField.closest('.mb-3, .form-group');
            
            function toggleYearField() {
                if (useFileDateCheckbox.checked) {
                    defaultYearField.disabled = true;
                    if (yearFormGroup) {
                        yearFormGroup.style.opacity = '0.5';
                    }
                } else {
                    defaultYearField.disabled = false;
                    if (yearFormGroup) {
                        yearFormGroup.style.opacity = '1';
                    }
                }
            }
            
            // Initial state
            toggleYearField();
            
            // Listen for changes
            useFileDateCheckbox.addEventListener('change', toggleYearField);
        }

        // Dynamic tags filtering based on course and category
        if (courseField && categoryField && tagsField) {
            let debounceTimer;

            const newTagInput = document.getElementById('newTagInput');
            const createTagBtn = document.getElementById('createTagBtn');
            
            function updateTags() {
                const courseId = courseField.value;
                const categoryId = categoryField.value;
                
                // Clear debounce timer
                clearTimeout(debounceTimer);
                
                // Debounce the API call
                debounceTimer = setTimeout(() => {
                    // Build query string (can be empty if no course/category selected)
                    const params = new URLSearchParams();
                    if (courseId) params.append('course', courseId);
                    if (categoryId) params.append('category', categoryId);
                    
                    // Fetch tags (including tags with no documents)
                    fetch('{{ path('admin_bulk_upload_get_tags') }}?' + params.toString())
                        .then(response => response.json())
                        .then(tags => {
                            // Store currently selected values
                            const selectedValues = Array.from(tagsField.selectedOptions).map(opt => opt.value);
                            
                            // Clear and rebuild options
                            tagsField.innerHTML = '';
                            
                            if (tags.length > 0) {
                                tags.forEach(tag => {
                                    const option = document.createElement('option');
                                    option.value = tag.id;
                                    option.textContent = tag.name;
                                    // Restore selection if it was previously selected and still available
                                    if (selectedValues.includes(String(tag.id))) {
                                        option.selected = true;
                                    }
                                    tagsField.appendChild(option);
                                });
                                tagsField.disabled = false;
                            } else {
                                const option = document.createElement('option');
                                option.value = '';
                                option.textContent = 'No tags available';
                                tagsField.appendChild(option);
                                tagsField.disabled = true;
                            }
                        })
                        .catch(error => {
                            console.error('Error fetching tags:', error);
                            tagsField.innerHTML = '<option value="">Error loading tags</option>';
                            tagsField.disabled = true;
                        });
                }, 300); // 300ms debounce
            }
            
            // Listen for changes
            courseField.addEventListener('change', updateTags);
            categoryField.addEventListener('change', updateTags);
            
            // Initial load - fetch all tags (including those with no documents)
            updateTags();

            // Handle tag creation
            if (createTagBtn && newTagInput) {
                function createNewTag() {
                    const tagName = newTagInput.value.trim();
                    
                    if (!tagName) {
                        alert('Please enter a tag name');
                        return;
                    }
                    
                    // Disable button during creation
                    createTagBtn.disabled = true;
                    createTagBtn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Creating...';
                    
                    // Send request to create tag
                    fetch('{{ path('admin_bulk_upload_create_tag') }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ name: tagName })
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Failed to create tag');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Enable the select if it was disabled and clear placeholder
                        if (tagsField.disabled) {
                            tagsField.disabled = false;
                            tagsField.innerHTML = '';
                        }
                        
                        // Check if tag already exists in the select
                        let optionExists = false;
                        Array.from(tagsField.options).forEach(option => {
                            if (option.value === String(data.id)) {
                                optionExists = true;
                                option.selected = true;
                            }
                        });
                        
                        // If tag doesn't exist in the list, add it
                        if (!optionExists) {
                            const option = document.createElement('option');
                            option.value = data.id;
                            option.textContent = data.name;
                            option.selected = true;
                            tagsField.appendChild(option);
                        }
                        
                        // Clear input
                        newTagInput.value = '';
                        
                        // Show success message
                        if (data.existing) {
                            alert('Tag "' + data.name + '" already exists and has been selected');
                        } else {
                            // Create a temporary success message
                            const successMsg = document.createElement('div');
                            successMsg.className = 'alert alert-success alert-dismissible fade show mt-2';
                            successMsg.innerHTML = `
                                <i class="fa fa-check-circle"></i> Tag "${data.name}" created successfully!
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            `;
                            newTagInput.parentElement.parentElement.appendChild(successMsg);
                            setTimeout(() => successMsg.remove(), 3000);
                        }
                    })
                    .catch(error => {
                        console.error('Error creating tag:', error);
                        alert('Failed to create tag. Please try again.');
                    })
                    .finally(() => {
                        // Re-enable button
                        createTagBtn.disabled = false;
                        createTagBtn.innerHTML = '<i class="fa fa-plus"></i> Create Tag';
                    });
                }
                
                createTagBtn.addEventListener('click', createNewTag);
                
                // Allow Enter key to create tag
                newTagInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        createNewTag();
                    }
                });
            }
        }

        // Capture file timestamps before form submission
        if (form && fileInput) {
            form.addEventListener('submit', function(e) {
                // Remove any existing timestamp fields
                form.querySelectorAll('.file-timestamp').forEach(el => el.remove());
                
                // Add timestamp for each file
                const files = fileInput.files;
                const timestamps = [];
                
                for (let i = 0; i < files.length; i++) {
                    // Convert to Unix timestamp (seconds)
                    const timestamp = Math.floor(files[i].lastModified / 1000);
                    timestamps.push(timestamp);
                }
                
                // Add as JSON array to form
                if (timestamps.length > 0) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'file_timestamps';
                    input.value = JSON.stringify(timestamps);
                    input.className = 'file-timestamp';
                    form.appendChild(input);
                }
            });
        }
    });
</script>
{% endblock %}

